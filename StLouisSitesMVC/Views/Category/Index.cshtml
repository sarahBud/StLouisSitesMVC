@model List<StLouisSitesMVC.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Checkbox List</h1>

<legend class="col-sm-3 control-label"></legend>
<div class="checkbox checkboxlist col-sm-9">
    @{ 
        for (int i = 0; i < Model.Count(); i++)
        {
            <input asp-for=" @Model[i].CheckboxAnswer" type="checkbox"/>
            <label asp-for="@Model[i].Id">@Model[i].CategoryName</label>
            <input asp-for="@Model[i].Id" type ="hidden" />
            <input asp-for="@Model[i].CategoryName" type="hidden" />
            <br />
        }


    }


</div>
<div class="form-group">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <inpt id="Submit1" type="submit" value="submit"></inpt>
        </div>
    </div>
</div>
